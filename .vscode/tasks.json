{ 
    "version": "0.1.0", 
    "command": "particle", 
    "isShellCommand": true, 
    "args": [], 
    "showOutput": "always", 
    "echoCommand": true, 
    "tasks": [ 
        { 
            "taskName": "compile", 
            "suppressTaskName": false, 
            "isBuildCommand": true,            
            "args": ["electron", "${workspaceRoot}", "--saveTo", "${workspaceRoot}/firmware.bin"],
            // Use the standard less compilation problem matcher. 
            "problemMatcher": { 
                "owner": "cpp", 
                "fileLocation": ["relative", "${workspaceRoot}"], 
                "pattern": { 
                    "regexp": "^(.*?):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$", 
                    "file": 1, 
                    "line": 2, 
                    "column": 3, 
                    "severity": 4, 
                    "message": 5 
                }, 
                "severity":"error" 
            } 
    },         { 
            "taskName": "flash",             
            "suppressTaskName": false, 
            "isTestCommand": true,
            "args": ["woozy", "firmware.bin"] 
        }    
    ]     
 }